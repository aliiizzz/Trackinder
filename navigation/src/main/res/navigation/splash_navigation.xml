<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/splash_navigation"
    app:startDestination="@id/fragment_splash">

    <fragment
        android:id="@+id/fragment_splash"
        android:name="com.trackinder.splash.FragmentSplash"
        android:label="Splash"
        >
        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@id/login_navigation"
            />
        <action
            android:id="@+id/action_splash_to_main"
            app:destination="@id/main_navigation"
            />
    </fragment>
    <include app:graph="@navigation/login_navigation" />
    <include app:graph="@navigation/main_navigation" />
</navigation>