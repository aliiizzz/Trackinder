<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.trackinder.main.ViewModelMain" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/image_view_main_avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_main_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_view_main_avatar"
            android:textSize="16sp"
            tools:text="test"
            bind:name="@{viewmodel.profileName}"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_main_import_playlists"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_main_name"
            android:text="@string/import_playlists"
            android:onClick="@{() -> viewmodel.importClicked()}"
            />

        <ProgressBar
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/progress_bar_main_loading"
            app:layout_constraintStart_toStartOf="@id/button_main_import_playlists"
            app:layout_constraintEnd_toEndOf="@id/button_main_import_playlists"
            app:layout_constraintTop_toTopOf="@id/button_main_import_playlists"
            app:layout_constraintBottom_toBottomOf="@id/button_main_import_playlists"
            android:indeterminate="true"
            android:visibility="@{viewmodel.progressVisible}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>